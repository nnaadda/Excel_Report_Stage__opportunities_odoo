<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Wizard Form View -->
    <record id="view_crm_stage_report_wizard_form" model="ir.ui.view">
        <field name="name">CRM Stage Report Wizard Form</field>
        <field name="model">crm.stage.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Stage Summary Report">
                <group>
                    <group>
                        <field name="year" widget="selection"/>
                        <field name="month" widget="selection"/>
                    </group>
                </group>
                <footer>
                    <button string="Generate Report" name="generate_report" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="action_crm_stage_report_wizard" model="ir.actions.act_window">
        <field name="name">Generate Stage Summary Report</field>
        <field name="res_model">crm.stage.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_crm_stage_report_wizard_form"/>
    </record>

    <!-- Simple Menu Item in CRM -->
    <menuitem id="menu_crm_stage_report_simple" 
              name="ðŸ“Š Stage Report"
              parent="crm.crm_menu_root"
              action="action_crm_stage_report_wizard"
              sequence="15"/>

    <!-- Add button to CRM Lead form view -->
    <record id="view_crm_lead_form_inherit_report" model="ir.ui.view">
        <field name="name">crm.lead.form.inherit.report</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="%(action_crm_stage_report_wizard)d" 
                        type="action"
                        string="Stage Report"
                        class="oe_stat_button"
                        icon="fa-bar-chart"/>
            </xpath>
        </field>
    </record>

</odoo>